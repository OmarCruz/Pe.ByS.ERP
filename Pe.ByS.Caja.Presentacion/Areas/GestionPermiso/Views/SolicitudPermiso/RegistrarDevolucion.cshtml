@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Registrar Devolución</strong>
    </div>
    <div class="panel-body" style="min-height: 330px;">
        <div id="divMensajeInformativo">
            <span class="fa fa-info-circle"></span>
            <span id="lblMensajeInformativo">Por favor ingrese el comprobante de pago.</span>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <div class="form-horizontal" role="form">
                    <div class="form-group" style="">
                        <label class="col-sm-5 control-label">Comprobante de Pago:</label>
                        <div class="col-sm-7">
                            <input id="txtComprobantePago" type="text" class="form-control integerInput" maxlength="15" placeholder="Comprobante de Pago" >
                        </div>
                    </div>
                </div>
                <div class="form-horizontal" role="form">
                    <div class="form-group" style="">
                        <label class="col-sm-5 control-label">Fecha de Pago:</label>
                        <div class="col-sm-7">
                            <input id="txtFechaPago" type="text" class="form-control" maxlength="15" placeholder="Fecha de Pago" disabled="disabled" >
                        </div>
                    </div>
                </div>
                <div class="form-horizontal" role="form">
                    <div class="form-group" style="">
                        <label class="col-sm-5 control-label">Días transcurridos:</label>
                        <div class="col-sm-7">
                            <input id="txtTiempoTranscurrido" type="text" class="form-control" maxlength="15" placeholder="Días Transcurridos" disabled="disabled" >
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-6">
                <div class="form-horizontal" role="form">
                    <div class="form-group" style="">
                        <label class="col-sm-5">
                            <input id="btnBuscar" type="button" value="Buscar" class="btn btn-default btn-filter" />
                        </label>
                        <div class="col-sm-7">
                            &nbsp;            
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <h3>Detalle de la Venta</h3>
            </div>
        </div>

        <div id="divResultadoBusqueda" style="display: none">
            <div class="table-responsive">
                <div id="grdResultado" >
                </div>
            </div>
        </div>

        <form id="frmRegistrarPago">
            <div id="divDatosPago">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-horizontal" role="form">
                            <div class="form-group" style="">
                                <label class="col-sm-12 control-label">* Se generará una nota de crédito bajo los productos seleccionados con un monto total de:</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-horizontal" role="form">
                            <div class="form-group" style="">
                                <label class="col-sm-2 control-label">Monto Total Soles:</label>
                                <div class="col-sm-3">
                                    <input id="txtTotalSoles" type="text" class="form-control" placeholder="0.00" disabled="disabled">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-sm-5"></div>
                                <div class="col-sm-7" style="text-align: right;">
                                    <input id="btnLimpiar" class="btn btn-default btn-filter" type="button" value="Limpiar" data-bind="visible: Limpiar.Visible, enable: Limpiar.Enabled" />
                                    <input id="btnGrabar" type="button" value="Grabar" class="btn btn-primary   " data-bind="visible: MostrarResultado.Visible,enable: MostrarResultado.Enabled" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        

    </div>
</div>
@section Scripts {

    <script src="../../Scripts/PDF/pdfmake.min.js"></script>
 	<script src="../../Scripts/PDF/vfs_fonts.js"></script>

    <script type="text/javascript">
        ns('Pe.ByS.ERP.GestionPermiso.SolicitudPermiso.Actions');
        Pe.ByS.ERP.GestionPermiso.SolicitudPermiso.Actions.Buscar = '@Url.Action("BuscarDocumento", "SolicitudPermiso", new { Area = "GestionPermiso" })';
        Pe.ByS.ERP.GestionPermiso.SolicitudPermiso.Actions.Grabar = '@Url.Action("GrabarNotaCredito", "SolicitudPermiso", new { Area = "GestionPermiso" })';
        Pe.ByS.ERP.GestionPermiso.SolicitudPermiso.Actions.GrabarPagoDetalle = '@Url.Action("GrabarNotaCreditoDetalle", "SolicitudPermiso", new { Area = "GestionPermiso" })';

       
    </script>
}